<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %x %p %t %L %c{3}: %m%n" />
        </layout>
    </appender>
    <appender name="fileAppender" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="target/application.log" />
        <param name="DatePattern" value="'.'yyyy-MM-dd" />
        <param name="encoding" value="UTF-8" />
        <param name="Append" value="true" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %x %p %t %L %c{2}: %m%n" />
        </layout>
    </appender>
    <logger name="com.ning.http.client.providers.netty">
        <level value="info" />
    </logger>
    <logger name="org.apache">
        <level value="error" />
    </logger>
    <logger name="org.quartz">
        <level value="error" />
    </logger>
    <logger name="org.springframework">
        <level value="info" />
    </logger>
    <logger name="org.hornetq">
        <level value="info" />
    </logger>
    <logger name="de.zalando">
        <level value="info" />
    </logger>
    <logger name="net.sourceforge">
        <level value="error" />
    </logger>
    <logger name="org.apache.log4j.jmx.AbstractDynamicMBean">
        <level value="error" />
    </logger>
    <logger name="de.zalando.config">
        <level value="debug" />
    </logger>


    <root>
        <priority value="info" />
        <appender-ref ref="fileAppender" />
        <appender-ref ref="console" />
    </root>

</log4j:configuration>
